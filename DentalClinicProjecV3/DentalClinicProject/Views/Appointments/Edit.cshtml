@model DentalClinicProject.ViewModels.AppointmentssVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<h3 class="bg-primary text-white p-2 ">تعديل  الموعد @Model.AppointDate</h3>

<hr />

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="dentalOperationsComboBox" class="control-label">Select a Dental Operation:</label>
        <select id="dentalOperationsComboBox" class="form-control" asp-for="Status">
            <option value="0" selected>Choose an Operation</option>
            <option>Dental Checkup</option>
            <option>Teeth Cleaning (Dental Prophylaxis)</option>
            <option>Dental Fillings</option>
            <option>Tooth Extraction</option>
            <option>Root Canal Treatment</option>
            <option>Dental Crowns and Bridges</option>
            <option>Dental Implants</option>
            <option>Dentures</option>
            <option>Teeth Whitening</option>
            <option>Dental Veneers</option>
            <option>Gum Disease Treatment</option>
            <option>Orthodontic Treatment</option>
            <option>Oral Surgery</option>
        </select>
    </div>
    <div class="form-row">

        <div class="form-group col-md-6">
            <label asp-for="AppointDate" class="control-label"></label>
            <input asp-for="AppointDate" class="form-control" />
            <span asp-validation-for="AppointDate" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="AppointTime" class="control-label"></label>
            <input asp-for="AppointTime" class="form-control" />
            <span asp-validation-for="AppointTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>



<div>
    <a asp-action="Index"
       class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm"> Back to list</a>
</div>
<br />
<br />
<br />
@section ScriptRegion{
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


}